{
  "kind": "collectionType",
  "collectionName": "course_categories",
  "info": {
    "singularName": "course-category",
    "pluralName": "course-categories",
    "displayName": "Course Category",
    "description": "Categories for grouping courses"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "moodle_id": {
      "type": "integer",
      "unique": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "is_organization": {
      "type": "boolean",
      "default": false
    },
    "description": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    },
    "courses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course.course",
      "mappedBy": "course_category"
    },
    "parent_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course-category.course-category",
      "inversedBy": "sub_categories"
    },
    "sub_categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course-category.course-category",
      "mappedBy": "parent_category"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "thumbnail_video_link": {
      "type": "string"
    }
  }
}
