{
  "kind": "collectionType",
  "collectionName": "course_categories",
  "info": {
    "singularName": "course-category",
    "pluralName": "course-categories",
    "displayName": "Course Category",
    "description": "Categories for courses"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "moodle_id": {
      "type": "integer",
      "unique": true
    },
    "icon": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images", "files"],
      "required": false
    },
    "description": {
      "type": "text"
    },
    "courses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course.course",
      "mappedBy": "category"
    }
  }
}
