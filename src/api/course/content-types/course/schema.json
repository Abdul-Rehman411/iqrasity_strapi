{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": "LMS Course Catalog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "moodle_course_id": {
      "type": "integer",
      "required": true,
      "unique": true
    },
    "course_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course-category.course-category",
      "inversedBy": "courses"
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "short_description": {
      "type": "text",
      "maxLength": 300,
      "required": true
    },
    "languages": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::language.language"
    },
    "intro_videos_links": {
      "type": "component",
      "component": "elements.video-item",
      "repeatable": true
    },
    "duration_weeks": {
      "type": "integer"
    },
    "total_duration_hours": {
      "type": "integer"
    },
    "total_duration_minutes": {
      "type": "integer"
    },
    "assignments_count_override": {
      "type": "integer"
    },
    "rating": {
      "type": "decimal",
      "default": 4.5,
      "min": 0,
      "max": 5
    },
    "review_count": {
      "type": "string",
      "default": "(125)"
    },
    "enrolled_count": {
      "type": "string",
      "default": "1.2k"
    },
    "price": {
      "type": "decimal",
      "default": 0
    },
    "original_price": {
      "type": "decimal"
    },
    "discount_deadline_days": {
      "type": "integer"
    },
    "currency": {
      "type": "string",
      "default": "USD"
    },
    "card_tags": {
      "type": "component",
      "component": "elements.meta-tag",
      "repeatable": true
    },
    "course_layout": {
      "type": "dynamiczone",
      "components": [
        "sections.overview",
        "sections.outcomes",
        "sections.instructor",
        "sections.reviews-list",
        "sections.faq-section"
      ]
    }
  }
}
