{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": "LMS Course Catalog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "moodle_course_id": {
      "type": "integer",
      "required": true,
      "unique": true
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "organization": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::organization.organization",
      "inversedBy": "courses"
    },
    "short_description": {
      "type": "text",
      "maxLength": 300,
      "required": true
    },
    "rating": {
      "type": "decimal",
      "default": 4.5,
      "min": 0,
      "max": 5
    },
    "review_count": {
      "type": "string",
      "default": "(125)"
    },
    "enrolled_count": {
      "type": "string",
      "default": "1.2k"
    },
    "price": {
      "type": "decimal",
      "default": 0
    },
    "original_price": {
      "type": "decimal"
    },
    "currency": {
      "type": "string",
      "default": "USD"
    },
    "card_tags": {
      "type": "component",
      "component": "elements.meta-tag",
      "repeatable": true
    }
  }
}
