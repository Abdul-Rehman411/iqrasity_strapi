{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": "LMS Course Catalog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "shortname": {
      "type": "string"
    },
    "short_description": {
      "type": "text",
      "maxLength": 300,
      "required": true
    },
    "moodle_course_id": {
      "type": "integer",
      "required": true,
      "unique": true
    },
    "course_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course-category.course-category",
      "inversedBy": "courses"
    },
    "org_logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "intro_videos_links": {
      "type": "component",
      "component": "elements.video-item",
      "repeatable": true,
      "required": false
    },
    "languages": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::language.language"
    },
    "currency": {
      "type": "string",
      "default": "USD"
    },
    "price": {
      "type": "decimal",
      "default": 0
    },
    "original_price": {
      "type": "decimal"
    },
    "discount_deadline_days": {
      "type": "integer"
    },
    "duration": {
      "type": "string",
      "default": "3-6 Months"
    },
    "pace": {
      "type": "enumeration",
      "default": "self_paced",
      "enum": [
        "self_paced",
        "instructor_led"
      ]
    },
    "level": {
      "type": "enumeration",
      "default": "beginner",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ]
    },
    "certificate_type": {
      "type": "enumeration",
      "default": "professional",
      "enum": [
        "completion",
        "achievement",
        "professional",
        "none"
      ]
    },
    "rating": {
      "type": "decimal",
      "default": 4.5,
      "min": 0,
      "max": 5
    },
    "review_count": {
      "type": "string",
      "default": "125"
    },
    "enrolled_count": {
      "type": "string",
      "default": "1.2k"
    },
    "duration_weeks": {
      "type": "integer"
    },
    "total_duration_hours": {
      "type": "integer"
    },
    "total_duration_minutes": {
      "type": "integer"
    },
    "assignments_count_override": {
      "type": "integer"
    },
    "Live_Session": {
      "type": "component",
      "repeatable": false,
      "component": "sections.live-session",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "pace"
            },
            "instructor_led"
          ]
        }
      }
    },
    "course_layout": {
      "type": "dynamiczone",
      "components": [
        "sections.overview",
        "sections.outcomes",
        "sections.instructor",
        "sections.reviews-list",
        "sections.faq-section"
      ]
    },
    "related_courses": {
      "type": "component",
      "component": "sections.learn-next",
      "repeatable": true
    }
  }
}