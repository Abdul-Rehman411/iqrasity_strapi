{
  "collectionName": "components_sections_learn_next",
  "info": {
    "displayName": "Learn Next",
    "description": ""
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "list_custom_course": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "courses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course.course",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "list_custom_course"
            },
            true
          ]
        }
      }
    },
    "course_category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::course-category.course-category",
      "conditions": {
        "visible": {
          "!=": [
            {
              "var": "list_custom_course"
            },
            true
          ]
        }
      }
    }
  }
}
